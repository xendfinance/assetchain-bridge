{
  "name": "frontend",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview --port 3000 --host",
    "cypress": "yarn build && start-server-and-test serve http://localhost:3000/ 'cypress open'",
    "cypress:components": "cypress open  --component",
    "cypress:e2e": "yarn build && start-server-and-test serve http://localhost:3000/ 'cypress open --e2e'",
    "test:cypress:components": "cypress run --component",
    "test:cypress:e2e": "yarn build && start-server-and-test serve http://localhost:3000/ 'cypress run --e2e'",
    "\n# TESTING SCRIPTS:": "",
    "type": "vue-tsc --noEmit",
    "test": "VITE_OFF_STORE=true vitest run",
    "coverage": "yarn test --coverage src/",
    "test:store": "yarn test --dir src/__tests__/store",
    "test:gotbit-tools": "yarn test --dir src/gotbit-tools",
    "test:build": "yarn build",
    "test:full": "yarn type && yarn test && yarn test:build",
    "\n# GOTBIT-TOOLS SCRIPTS:": "",
    "update": "npx gotbit-tools@latest install vue -d ./src",
    "update:ui-kit": "SCRIPT=./src/components/gotbit-ui-kit/scripts/update-ui.sh yarn script",
    "contracts": "yarn contracts:sync && yarn contracts:typings",
    "contracts:sync": "node ./src/gotbit-tools/scripts/import-contracts.js",
    "contracts:typings": "node ./src/gotbit-tools/scripts/typings.js",
    "contracts:balance": "node ./src/gotbit-tools/scripts/balance.js",
    "deploy:cicd": "SCRIPT=./src/gotbit-tools/scripts/cicd/firebase-deploy.sh yarn script",
    "fork": "concurrently 'node ./src/gotbit-tools/scripts/fork.js' 'VITE_FORK=true yarn dev'",
    "\n# UTILS SCRIPTS:": "",
    "script": "chmod +x $SCRIPT && $SCRIPT",
    "pretty": "prettier --write \"./**/*.{ts,tsx,vue}\""
  },
  "dependencies": {
    "@coinbase/wallet-sdk": "^3.3.0",
    "@coral-xyz/anchor": "^0.29.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@formkit/auto-animate": "^0.8.0",
    "@hennge/vue3-pagination": "^1.0.17",
    "@mdx-js/preact": "^2.1.2",
    "@project-serum/anchor": "^0.26.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@solana/spl-token": "^0.3.7",
    "@solana/wallet-adapter-wallets": "^0.19.16",
    "@solana/web3.js": "^1.74.0",
    "@vueuse/core": "^8.5.0",
    "@walletconnect/ethereum-provider": "2.10.2",
    "@walletconnect/modal": "2.6.2",
    "@walletconnect/web3-provider": "1.7.8",
    "axios": "^0.27.2",
    "buffer": "^6.0.3",
    "ethers": "^5.5.3",
    "ethers-multicall": "^0.2.3",
    "moment": "^2.29.1",
    "pinia": "^2.0.11",
    "prettier": "^2.8.8",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "solana-wallets-vue": "^0.6.0",
    "vue": "^3.2.31",
    "vue-awesome-paginate": "^1.1.46",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@types/node": "^16.11.25",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/test-utils": "^2.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.1.0",
    "cypress": "^10.3.1",
    "jest": "27",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "sass": "^1.51.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "typescript": "~4.5.5",
    "vite": "^2.8.4",
    "vitest": "^0.15.2",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^1.2.0"
  },
  "packageManager": "yarn@1.22.19"
}
